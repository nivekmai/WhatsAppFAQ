<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReturnSearch" 
    android:orientation="vertical"
    >
   		<ProgressBar
	        android:id="@+id/pbLoadingResultAlt"
	        style="?android:attr/progressBarStyleLarge"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        />
		<Button
 		    android:id="@+id/bNoMatchAlt"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_alignParentBottom="true"
 		    android:layout_alignParentLeft="true"
 		    android:layout_alignParentRight="true"
 		    android:text="@string/does_not_match_button"
 		    android:background="@drawable/orange_button"
 		    android:layout_margin="5dp" 
 		    />
 		<TextView 
 		    android:id="@+id/tvTryThisAlt"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_alignParentLeft="true"
 		    android:layout_alignParentRight="true"
 		    android:layout_alignParentTop="true"
 		    android:text="@string/try_these_faq"
 		    android:textSize="22sp"
 		    android:gravity="center"
 		    android:fontFamily="Helvetica Neue, Helvetica, Tahoma, Arial, sans-serif"
 		    />

 		<ScrollView
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:layout_above="@id/bNoMatchAlt"
 		    android:layout_below="@id/tvTryThisAlt"
 		    android:layout_alignParentLeft="true"
 		    android:layout_alignParentRight="true"
 		    >

			<LinearLayout
		      android:layout_width="match_parent"
		      android:layout_height="wrap_content"
		      android:orientation="vertical"
		      >
		     	<Button 
		     	    	android:id="@+id/bResult0"
		     	    	android:layout_width="match_parent"
		     	    	android:layout_height="match_parent"
		     	    	android:layout_weight="1"
		     	    	android:drawableLeft="@drawable/button_down"
		     	    	android:drawablePadding="@dimen/dropdown_padding"
		     	    	android:gravity="left"
		     	    	/>
				<WebView 
				       android:id="@+id/wvResult0Alt"
				       android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       android:visibility="gone"
				       />
				<Button 
		     	    	android:id="@+id/bResult1"
		     	    	android:layout_width="match_parent"
		     	    	android:layout_height="match_parent"
		     	    	android:layout_weight="1"
		     	    	android:drawableLeft="@drawable/button_down"
		     	    	android:drawablePadding="@dimen/dropdown_padding"
		     	    	android:gravity="left"
		     	    	/>
				
				<WebView 
				       android:id="@+id/wvResult1Alt"
				       android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       android:visibility="gone"
				       />
				<Button 
		     	    	android:id="@+id/bResult2"
		     	    	android:layout_width="match_parent"
		     	    	android:layout_height="match_parent"
		     	    	android:layout_weight="1"
		     	    	android:drawableLeft="@drawable/button_down"
		     	    	android:drawablePadding="@dimen/dropdown_padding"
		     	    	android:gravity="left"
		     	    	/>
				<WebView 
				       android:id="@+id/wvResult2Alt"
				       android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       android:visibility="gone"
				       />
				<Button 
		     	    	android:id="@+id/bResult3"
		     	    	android:layout_width="match_parent"
		     	    	android:layout_height="match_parent"
		     	    	android:layout_weight="1"
		     	    	android:drawableLeft="@drawable/button_down"
		     	    	android:drawablePadding="@dimen/dropdown_padding"
		     	    	android:gravity="left"
		     	    	/>
				<WebView 
				       android:id="@+id/wvResult3Alt"
				       android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       android:visibility="gone"
				       />
				<Button 
		     	    	android:id="@+id/bResult4"
		     	    	android:layout_width="match_parent"
		     	    	android:layout_height="match_parent"
		     	    	android:layout_weight="1"
		     	    	android:drawableLeft="@drawable/button_down"
		     	    	android:drawablePadding="@dimen/dropdown_padding"
		     	    	android:gravity="left"
		     	    	/>
				<WebView 
				       android:id="@+id/wvResult4Alt"
				       android:layout_width="match_parent"
				       android:layout_height="wrap_content"
				       android:layout_weight="1"
				       android:visibility="gone"
				       />
 		</LinearLayout>
	</ScrollView>
</RelativeLayout>