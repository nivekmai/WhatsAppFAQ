<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FAQQuestionButtonTheme" parent="@android:style/Widget.Button">
        <item name = "android:textSize">@dimen/faq_button_text_size</item>
        <item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">fill_parent</item>
		<item name = "android:layout_weight">1</item>
		<item name = "android:drawableLeft">@drawable/button_down</item>
		<item name = "android:drawablePadding">@dimen/dropdown_padding</item>
		<item name = "android:gravity">left</item>
		<item name = "android:visibility">gone</item>
		<item name = "android:background">@drawable/faq_question_button</item>
		<item name = "android:padding">5dp</item>
		<item name = "android:fontFamily">roboto regular, roboto</item>
		<item name = "android:textColor">#848484</item>
    </style>
    
    <style name="FAQAnswerTheme">
        <item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">match_parent</item>
		<item name = "android:layout_weight">1</item>
		<item name = "android:visibility">gone</item>
        
    </style>
           <style name="FAQQuestionButtonThemeAR" parent="@android:style/Widget.Button">
        <item name = "android:textSize">@dimen/faq_button_text_size</item>
        <item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">fill_parent</item>
		<item name = "android:layout_weight">1</item>
		<item name = "android:drawableRight">@drawable/button_down</item>
		<item name = "android:drawablePadding">@dimen/dropdown_padding</item>
		<item name = "android:gravity">right</item>
		<item name = "android:visibility">gone</item>
		<item name = "android:background">@drawable/faq_question_button</item>
		<item name = "android:padding">5dp</item>
		<item name = "android:fontFamily">roboto regular, roboto</item>
		<item name = "android:textColor">#848484</item>
    </style>
    
    <style name="FAQAnswerThemeAR">
        <item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">match_parent</item>
		<item name = "android:layout_weight">1</item>
		<item name = "android:visibility">gone</item>
        
    </style>

</resources>